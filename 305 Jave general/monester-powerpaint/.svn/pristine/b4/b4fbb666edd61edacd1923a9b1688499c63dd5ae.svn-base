package tools;

import java.awt.Shape;
import java.awt.geom.Point2D;

/**
 * The Interface for tool, construct basic detail.
 * 
 * @author richardyang
 * @version 11.11
 */
public interface Tool {

    /**
     * get start point.
     * 
     * @return the start point
     */
    Point2D getStartP();
    
    /**
     * set start point.
     * 
     * @param theStartP the start point
     */
    void setStartP(Point2D theStartP);
    
    /**
     * get end point.
     * 
     * @return the end point
     */
    Point2D getEndP();
    
    /**
     * set end point.
     * 
     * @param theEndP the end point
     */
    void setEndP(Point2D theEndP);
    
    /**
     * get line width.
     * 
     * @return line width
     */
    int getLineWidth();
    
    /**
     * set line width.
     * 
     * @param theLineWidth line width.
     */
    void setLineWidth(int theLineWidth);
    
    /**
     * get fillable.
     * 
     * @return fillable
     */
    boolean isFillable();
    
    /**
     * set fillable.
     * 
     * @param theFillable fillable
     */
    void setFillable(boolean theFillable);

    /**
     * get the drawing path.
     * 
     * @return the path
     */
    Shape getPath();
    
}
